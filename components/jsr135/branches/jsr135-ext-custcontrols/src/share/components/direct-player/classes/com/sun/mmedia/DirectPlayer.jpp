    private static Object videoSync = new Object();
    private static boolean videoBusy = false;
    private static final int VIDEO_SYNC_TIMEOUT = 15000;
    
    private abstract class SynchronousAction {
        public abstract Object run() throws Throwable;
        public Object onTimeout() throws Throwable {return null;}
        public void onException(Exception e) {}
    }
    
    private Object doSynchronously(SynchronousAction todo) {
        Object result = null;
        Throwable thr = null;
        if (videoControl == null || !getOwner().isCapturePlayer()) {
            try {
                result = todo.run();
            } catch (Throwable e) {
                thr = e;
            }
            if (thr != null) {
                if (thr instanceof Error) {
                    throw (Error)thr;
                }
                if (thr instanceof RuntimeException) {
                    throw (RuntimeException)thr;
                }
                todo.onException((Exception)thr);
            }
            return result;
        }
        synchronized (videoSync) {
            do {
                if (videoBusy) {
                    try {
                        videoSync.wait(VIDEO_SYNC_TIMEOUT);
                    } catch (InterruptedException ie) {}
                    if (videoBusy) {
                        try {
                            result = todo.onTimeout();
                        } catch (Throwable e) {
                            thr = e;
                        }
                        break;
                    }
                }
                videoBusy = true;
                
                try {
                    result = todo.run();
                } catch (Throwable e) {
                    thr = e;
                }
                videoBusy = false;
                videoSync.notify();
            } while (false);
            
            if (thr != null) {
                if (thr instanceof Error) {
                    throw (Error)thr;
                }
                if (thr instanceof RuntimeException) {
                    throw (RuntimeException)thr;
                }
                todo.onException((Exception)thr);
            }
        }
        return result;
    }
    
