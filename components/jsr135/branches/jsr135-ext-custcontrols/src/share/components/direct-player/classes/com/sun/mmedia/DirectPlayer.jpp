    private boolean isWaitingForSnapshot;
    // Get snapshot
    public synchronized byte[] getVideoSnapshot(final String imageType) throws MediaException {
        byte[] result = null;
        final Exception[] exc = new Exception[1];
        result =  (byte[]) doSynchronously(new SynchronousAction() {
            public Object run() throws Throwable {
                return getVideoSnapshot0(imageType);
            }
            public void onException(Exception e) {
                exc[0] = e;
            }
            public Object onTimeout() throws Throwable {
                System.out.println("getVideoSnapshot: sync timeout");
                throw new MediaException("Synchronization timeout");
            }
        });
        
        if (exc[0] != null && exc[0] instanceof MediaException) {
            throw (MediaException) exc[0];
        }
        return result;
    }
    
    private byte[] getVideoSnapshot0(String imageType) throws MediaException
    {
        byte [] ret = null;
        getOwner().checkSnapshotPermission();
        int hNative = getOwner().getNativeHandle();
        try {
            synchronized ( snapshotLock )
            {
                nStartSnapshot( hNative, imageType );
                isWaitingForSnapshot = true;
                snapshotLock.wait( 10000 );
                if( isWaitingForSnapshot )
                {
                    isWaitingForSnapshot = false;
                    throw new MediaException( 
                            "Timed out while making a Camera Snapshot" );
                }
                
                ret = nGetSnapshotData( hNative );
            }
        }
        catch ( InterruptedException ie )
        {
            throw new MediaException( 
               "Camera Snapshot was interrupted by user: " + ie.toString() );
        }
        return ret;
    }

    protected void doNotifySnapshotFinished()
    {
        synchronized( snapshotLock )
        {
            if( isWaitingForSnapshot )
            {
                snapshotLock.notify();
                isWaitingForSnapshot = false;
            }
        }
    }
    
