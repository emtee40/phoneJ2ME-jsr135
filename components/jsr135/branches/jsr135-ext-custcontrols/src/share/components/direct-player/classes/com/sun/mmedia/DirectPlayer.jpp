    /**
     * Overrides from BasicPlayer (pre works for stop)
     */
    protected void doPreStop() {
        if (stopTimer != null) {
            stopTimer.cancel();
            stopTimer = null;
        }
        // #ifdef RECORD [
        if (recordControl != null) {
            recordControl.playerStopped();
        }
        // #endif ]
        if (midiControl != null) {
            midiControl.playerStopped();
        }
    }
    
    /**
     * Subclasses need to implement this to realize
     * the <code>Player</code>.
     *
     * @exception  MediaException  Description of the Exception
     */
    protected void doStop() throws MediaException {
        final Exception[] exc = new Exception[1];
        doSynchronously(new SynchronousAction() {
            public Object run() throws Throwable {
                doStop0();
                return null;
            }
            public void onException(Exception e) {
                exc[0] = e;
            }
            public Object onTimeout() throws Throwable {
                System.out.println("doStop: sync timeout");
                throw new MediaException("Synchronization timeout");
            }
        });
        
        if (exc[0] != null && exc[0] instanceof MediaException) {
            throw (MediaException) exc[0];
        }
    }
    
    private void doStop0() throws MediaException {

        if ( null != videoControl )
        {
            videoControl.stop();
        }
        
        if (false == nPause(getOwner().getNativeHandle())) {
            throw new MediaException("Player cannot be stopped");
        }
        state = Player.PREFETCHED;
    }

    private void releaseRadioAccess()
    {
        if( getOwner().isRadioPlayer() )
