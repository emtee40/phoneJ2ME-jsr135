SUBSYSTEM_JSR_135_NATIVE_FILES += \
	KNIPlayerImpl.c \
	KNIMediaDownload.c \
	KNIDirectPlayer.c \
	KNIDirectVolume.c \
	KNIDirectMetaData.c \
	KNITonePlayer.c \
	KNIDirectConfig.c \
	KNIDirectMIDIControl.c \
