######################################################################
# Module's Component Configuration file
#
# Remember: It is up to the module itself to impose rules of
# how to compile the options. All the global Makefile needs
# is the final def. of Java and native file lists and some
# other def. (like VPATH)
######################################################################

JSROP_PLATFORM = jump_application

JSR_135_PROJECT_SRC_DIR=$(JSR_135_DIR)/src/$(JSROP_PLATFORM)
JSR_135_PROJECT_BUILD_DIR=$(JSR_135_DIR)/build/$(JSROP_PLATFORM)

include $(JSR_135_PROJECT_BUILD_DIR)/config.gmk
include $(JSR_135_PROJECT_BUILD_DIR)/features.defs

SUBSYSTEM_JSR_135_JAVA_FILES += \
    $(JSR_135_DIR)/src/cdc_share/classes/com/sun/jsr135/DynamicProperties.java

ifeq ($(INDIRECT_VIDEO_PLAYER), true)
SUBSYSTEM_JSR_135_JAVA_FILES += \
    $(JSR_135_DIR)/src/cdc_share/classes/com/sun/mmedia/ModelVideoRenderer.java
ifeq ($(USE_AWT), true)
SUBSYSTEM_JSR_135_JAVA_FILES += \
    $(JSR_135_DIR)/src/cdc_share/classes/com/sun/mmedia/AWTVideoRenderer.java
endif
endif

vpath % $(JSR_135_DIR)/src/cdc_share/native
SUBSYSTEM_JSR_135_NATIVE_FILES += \
	jsr135_sync.c

JPP_DEFS += -DENABLE_CDC
SUBSYSTEM_JSR_135_INCLUDE_DIRS += \
	$(JSR_135_DIR)/src/cdc_share/native \
	$(JSR_135_DIR)/src/$(JSROP_PLATFORM)/native/common \
	$(JSR_135_DIR)/src/share/components/direct-player/native

JSR_135_BUILD_DIR       = $(JSROP_BUILD_DIR)/jsr135
JSR_135_GENERATED_DIR   = $(JSR_135_BUILD_DIR)/generated

#
# Add Autogenerated Initializer
# 
JSR_135_INIT_PACKAGE  = $(JSR_INIT_PACKAGE).jsr135
JSR_135_INITIALIZER   = $(JSR_135_GENERATED_DIR)/classes/$(subst .,/,$(JSR_135_INIT_PACKAGE))/$(JSR_INIT_CLASS).java

JSR_INITIALIZER_LIST += $(JSR_135_INIT_PACKAGE).$(JSR_INIT_CLASS)

API_EXTENSIONS_LIST += include=com/sun/mmedia/control/DualToneControl

SUBSYSTEM_JSR_135_JAVA_FILES += \
    $(JSR_135_INITIALIZER)
$(JSR_135_INITIALIZER): $(CONFIGURATOR_JAR_FILE)
	$(AT)$(call generateJSRInitializer,$(JSR_135_PROPERTY_FILES),$(JSR_135_GENERATED_DIR),$(JSR_135_INIT_PACKAGE),$@,$(JSR_135_LIB_NAME))

CVM_INCLUDE_JAVACALL  = true
USE_JAVACALL_EVENTS = true

JSR_135_LIB_NAME      = jsr135
JSR_135_JAR           = $(JSROP_JAR_DIR)/$(JSR_135_LIB_NAME).jar

include $(JSR_135_PROJECT_BUILD_DIR)/subsystem.gmk
include $(JSR_135_DIR)/build/share/common.gmk
